
# Distributed Notifications Microservices
# Root Environment Configuration

# Shared Infrastructure

# RabbitMQ (used by docker-compose.yml)
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# Database Credentials (For docker-compose.yml)
# PostgreSQL - User Service
USER_DB_USER=user_svc
USER_DB_PASS=user_dev_password
USER_DB_NAME=user_service_db

# PostgreSQL - Template Service
TEMPLATE_DB_USER=template_svc
TEMPLATE_DB_PASS=template_dev_password
TEMPLATE_DB_NAME=template_service_db

# PostgreSQL - Email Service
EMAIL_DB_USER=email_svc
EMAIL_DB_PASS=email_dev_password
EMAIL_DB_NAME=email_service_db

# PostgreSQL - Push Service
PUSH_DB_USER=push_svc
PUSH_DB_PASS=push_dev_password
PUSH_DB_NAME=push_service_db


# SMTP Configuration (Email Service)

# Gmail with SSL (Port 465 - recommended if 587 is blocked)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-16-char-app-password
SMTP_FROM_EMAIL=noreply@yourapp.com
SMTP_FROM_NAME=Notification Service



# Development Environment
NODE_ENV=development
ENVIRONMENT=development

# Service Ports Reference

# API Gateway: 4000
# User Service: 4001
# Template Service: 4002
# Email Service: 8000
# Push Service: 4100
# RabbitMQ AMQP: 5672
# RabbitMQ Management UI: 15672
# Redis: 6379
# PostgreSQL User DB: 5433
# PostgreSQL Template DB: 5434
# PostgreSQL Email DB: 5435
# PostgreSQL Push DB: 5436


# Setup Instructions

# 1. Copy this file: cp .env.example .env
# 2. Update SMTP credentials (Gmail requires app password)
# 3. Change database passwords for production
# 4. Never commit .env to git - it's in .gitignore
#
# Gmail App Password Setup:
# 1. Enable 2-Factor Authentication on Google account
# 2. Visit: https://myaccount.google.com/apppasswords
# 3. Generate app password for "Mail"
# 4. Use the 16-character password as SMTP_PASSWORD
# 5. Use port 465 (SSL) instead of 587 if your network blocks SMTP



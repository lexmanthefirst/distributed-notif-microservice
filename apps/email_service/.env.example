# Email Service Configuration

# Service
PORT=8000
ENVIRONMENT=development

# Database (connects to postgres_email on port 5435)
DB_HOST=localhost
DB_PORT=5435
DB_USER=email_svc
DB_PASSWORD=email_dev_password
DB_NAME=email_service_db

# Redis (for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_QUEUE=email_notifications

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourapp.com
SMTP_FROM_NAME=Your App Name

# Email Provider (alternatives)
# For SendGrid: SENDGRID_API_KEY=your-key
# For Mailgun: MAILGUN_API_KEY=your-key, MAILGUN_DOMAIN=your-domain
# For AWS SES: AWS_ACCESS_KEY_ID=your-key, AWS_SECRET_ACCESS_KEY=your-secret

# Rate Limiting
EMAIL_RATE_LIMIT=100  # emails per minute

# Application Settings
APP_NAME=Email Service
APP_VERSION=1.0.0
PORT=8000
DEBUG=false

# Database (PostgreSQL) - Email Service
# Option 1: Full URL (recommended for production/docker)
DATABASE_URL=postgresql://email_svc:email_dev_password@postgres_email:5432/email_service_db

# Option 2: Individual components (falls back if DATABASE_URL not set)
DB_HOST=postgres_email
DB_PORT=5432
DB_USER=email_svc
DB_PASSWORD=email_dev_password
DB_NAME=email_service_db

# RabbitMQ Configuration
# Option 1: Full RMQP URL (recommended for production/docker)
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672

# Option 2: Individual components (falls back if RABBITMQ_URL not set)
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
EMAIL_QUEUE_NAME=email.queue
FAILED_QUEUE_NAME=failed.queue
EXCHANGE_NAME=notifications.direct

# Redis Configuration
# Option 1: Full Redis URL (recommended for production/docker)
REDIS_URL=redis://redis:6379/0

# Option 2: Individual components (falls back if REDIS_URL not set)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# SMTP Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Notification Service

# SendGrid API (alternative to SMTP)
SENDGRID_API_KEY=

# Template Service
TEMPLATE_SERVICE_URL=http://template_service:4002

# Circuit Breaker Settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30

# Retry Settings
MAX_RETRY_ATTEMPTS=3
RETRY_BASE_DELAY=2

# Queue Consumer Settings
QUEUE_PREFETCH_COUNT=10

# Correlation ID Header
CORRELATION_ID_HEADER=X-Correlation-ID

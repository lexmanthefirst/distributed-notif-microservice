{
  "name": "@distributed-notifs/user-service",
  "version": "1.0.0",
  "private": true,
  "description": "User Service built with Fastify",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",

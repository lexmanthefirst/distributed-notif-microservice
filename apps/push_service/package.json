{
  "name": "@distributed-notifs/push-service",
  "version": "1.0.0",
  "private": true,
  "description": "Push Notification Service built with Fastify",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:dev": "tsx watch src/server.ts",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit"

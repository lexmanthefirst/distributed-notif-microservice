    "@fastify/env": "^4.3.0",
    "amqplib": "^0.10.3",
    "firebase-admin": "^12.0.0",
    "expo-server-sdk": "^3.7.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/amqplib": "^0.10.4",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "eslint": "^8.57.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.5",
    "vitest": "^1.2.1"
  }

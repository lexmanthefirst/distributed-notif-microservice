# Push Service Configuration

# Service
PORT=4100
NODE_ENV=development

# Database (connects to postgres_push on port 5436)
DB_HOST=localhost
DB_PORT=5436
DB_USER=push_svc
DB_PASSWORD=push_dev_password
DB_NAME=push_service_db

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_QUEUE=push_notifications

# Redis (for rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379

# Firebase Cloud Messaging (FCM)
FCM_PROJECT_ID=your-firebase-project-id
FCM_PRIVATE_KEY=your-firebase-private-key
FCM_CLIENT_EMAIL=your-firebase-client-email

# Apple Push Notification Service (APNS)
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=your-app-bundle-id
APNS_PRIVATE_KEY_PATH=/path/to/apns-key.p8

# Expo Push Notifications
EXPO_ACCESS_TOKEN=your-expo-access-token
